#middleleftPan
  %h2 Please Login
  - if flash[:notice].present?
    %p
      .notice= flash[:notice]


  = form_for :session, url: login_path do |f|
    .form
      .form_row
        .field
          .label
            = f.label :email
          = f.email_field :email, :class => "text_field"
      .form_row
        .field
          .label
            = f.label :password
          = f.password_field :password, :class => "text_field"
      .form_row  
        .actions
          = f.submit "Login", :class => "form_submit"
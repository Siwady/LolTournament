= form_for @player do |f|
  - if @player.errors.any?
    #error_explanation
      %h2= "#{pluralize(@player.errors.count, "error")} prohibited this player from being saved:"
      %ul
        - @player.errors.full_messages.each do |msg|
          %li= msg
  %br
  .field
    = f.label :name
    = f.text_field :name
  %br
  .field
    = f.label :email
    = f.text_field :email
  %br
  .field
    = f.label :nickname
    = f.text_field :nickname
  %br
  .actions
    = f.submit 'Save'
